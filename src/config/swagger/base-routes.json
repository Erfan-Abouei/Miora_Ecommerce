{
  "openapi": "3.0.0",
  "info": {
    "title": "Miora Ecommerce API",
    "version": "1.0.10",
    "description": "Complete API documentation for the Miora Ecommerce platform developed by Kara Team."
  },
  "servers": [
    {
      "url": "https://miora-api.karaflow.com/api/v1",
      "description": "Production Server"
    }
  ],
  "tags": [
    {
      "name": "Health Check",
      "description": "Health Check routes (for test check server status)"
    },
    {
      "name": "Redirect",
      "description": "Redirect routes (for redirect user to any callback)"
    },
    {
      "name": "Register",
      "description": "Register routes (for register user)"
    },
    {
      "name": "Login",
      "description": "Login routes (for login user)"
    },
    {
      "name": "Profile",
      "description": "Profile routes (for user profile)"
    },
    {
      "name": "Logout",
      "description": "Logout routes (for logout user)"
    },
    {
      "name": "Auth Check",
      "description": "Auth Check routes (for check login status in front side)"
    }
  ],
  "paths": {
    "/public/health-check": {
      "get": {
        "summary": "System Health Check",
        "description": "Check server status. If `has_system_data=true` is provided, hardware information (CPU, memory, disk, network) will also be returned.",
        "tags": ["Health Check"],
        "parameters": [
          {
            "name": "has_system_data",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["true", "false"]
            },
            "required": false,
            "description": "If true, returns CPU, memory, disk, and network information."
          }
        ],
        "responses": {
          "200": {
            "description": "System health status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {},
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/public/redirect": {
      "get": {
        "summary": "Redirect user",
        "description": "Redirects the user to the provided URL without returning a response body.",
        "tags": ["Redirect"],
        "parameters": [
          {
            "name": "redirect_url",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uri"
            },
            "description": "Destination URL to redirect the user to."
          }
        ],
        "responses": {
          "302": {
            "description": "User redirected successfully",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string",
                  "format": "uri"
                },
                "description": "Redirect destination URL"
              }
            }
          },
          "400": {
            "description": "Invalid or missing redirect_url",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/public/register": {
      "post": {
        "summary": "User Registration (Send OTP)",
        "description": "Initiate user registration by sending OTP. User must provide either email or phone_number (but not both) along with password.",
        "tags": ["Register"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {
                    "otp": 58492,
                    "register_session_id": "91c92dfc-f45b-4366-bfdc-6bbbc187af6e"
                  },
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "409": {
            "description": "Active registration session exists or contact already registered",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                },
                "example": {
                  "status": 409,
                  "success": false,
                  "author": "Kara_Company",
                  "message": "داده ارسال شده با داده‌های موجود در تداخل است.",
                  "error_code": "E1021",
                  "errors": {
                    "error_message": ["کد تأیید قبلاً ارسال شده است."]
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/public/register/confirm": {
      "post": {
        "summary": "Confirm Registration",
        "description": "Verify OTP using registration session ID and create user account.",
        "tags": ["Register"],
        "parameters": [
          {
            "name": "dashboard_callback_route",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Dashboard route for welcome email redirect (required)"
          },
          {
            "name": "local",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["true", "false"]
            },
            "description": "If 'true', cookies will be set without Secure flag (for local testing)"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserConfirmRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully, tokens set in cookies",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserSuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Invalid/expired OTP or session",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                },
                "example": {
                  "status": 409,
                  "success": false,
                  "author": "Kara_Company",
                  "message": "داده ارسال شده با داده‌های موجود در تداخل است.",
                  "error_code": "E1021",
                  "errors": {
                    "otp": ["کد تأیید نامعتبر یا منقضی شده است."]
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/public/register/resend-otp": {
      "post": {
        "summary": "Resend OTP",
        "description": "Resend verification code using the existing registration session ID.",
        "tags": ["Register"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResendOtpRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New OTP sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResendOtpResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {
                    "expire_otp_timer": 180,
                    "otp": 73921
                  },
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "409": {
            "description": "Invalid or expired registration session",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                },
                "example": {
                  "status": 409,
                  "success": false,
                  "author": "Kara_Company",
                  "message": "داده ارسال شده با داده‌های موجود در تداخل است.",
                  "error_code": "E1021",
                  "errors": {
                    "error_message": ["جلسه ثبت‌نام معتبر نیست یا منقضی شده است."]
                  }
                }
              }
            }
          },
          "429": {
            "description": "Too many resend attempts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                },
                "example": {
                  "status": 429,
                  "success": false,
                  "author": "Kara_Company",
                  "message": "بیش از سقف مجاز درخواست ارسال کرده‌اید، لطفا بعدا تلاش کنید.",
                  "error_code": "E429",
                  "errors": {
                    "error_message": ["لطفاً کمی صبر کنید و سپس دوباره درخواست کد دهید."],
                    "block_time_remaining": ["120"]
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/public/login": {
      "post": {
        "summary": "User Login",
        "description": "Login using email or phone number and password. JWT tokens are set in cookies.",
        "tags": ["Login"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLoginSuccessResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {
                    "user_name": "erfan_abouei",
                    "email": "erfan_abouei@example.com",
                    "phone_number": "09123456789",
                    "gender": "MALE",
                    "birth_date": null,
                    "profile_picture": "https://example.com/profile.jpg",
                    "bank_card_number": null,
                    "sheba_number": null,
                    "is_subscribed_for_newsletter": true,
                    "is_phone_verified": true,
                    "is_email_verified": true,
                    "created_at": "2025-01-01T00:00:00.000Z",
                    "updated_at": "2025-12-26T10:00:00.000Z"
                  },
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "401": {
            "description": "Incorrect credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                },
                "example": {
                  "status": 401,
                  "success": false,
                  "author": "Kara_Company",
                  "message": "داده ارسال شده با داده‌های موجود در تداخل است.",
                  "error_code": "E1021",
                  "errors": {
                    "password": ["گذرواژه ارسال شده معتبر نمیباشد."]
                  },
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "429": {
            "description": "Too many login attempts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiErrorResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/user/profile": {
      "get": {
        "summary": "Get User Profile",
        "description": "Retrieve authenticated user's full profile information (excluding password and role).",
        "tags": ["Profile"],
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User profile data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileSuccessResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {
                    "user_name": "erfan_abouei",
                    "email": "erfan_abouei@example.com",
                    "phone_number": "09123456789",
                    "gender": "MALE",
                    "birth_date": "1387/5/28",
                    "profile_picture": "https://example.com/profile.jpg",
                    "bank_card_number": "6037991234567890",
                    "sheba_number": "IR012345678901234567890123",
                    "is_subscribed_for_newsletter": true,
                    "is_phone_verified": true,
                    "is_email_verified": true,
                    "created_at": "2025-01-01T00:00:00.000Z",
                    "updated_at": "2025-12-26T12:30:00.000Z"
                  },
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "summary": "User Logout",
        "description": "Clear authentication tokens from cookies.",
        "tags": ["Logout"],
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "کاربر با موفقیت خارج شد.",
                  "data": {},
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/user/auth-check": {
      "get": {
        "summary": "Authentication Check",
        "description": "Check if the current user is authenticated.",
        "tags": ["Auth Check"],
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User is authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessResponse"
                },
                "example": {
                  "status": 200,
                  "success": true,
                  "author": "Kara_Company",
                  "message": "عملیات با موفقیت انجام شد.",
                  "data": {},
                  "time_zone": "Asia/Tehran",
                  "version": "1.0.10"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ApiSuccessResponse": {
        "type": "object",
        "required": ["status", "success", "author", "message", "data", "time_zone", "version"],
        "properties": {
          "status": {
            "type": "integer",
            "example": 200
          },
          "success": {
            "type": "boolean",
            "example": true
          },
          "author": {
            "type": "string",
            "example": "Kara_Company"
          },
          "message": {
            "type": "string",
            "example": "عملیات با موفقیت انجام شد."
          },
          "data": {
            "type": "object",
            "nullable": true
          },
          "time_zone": {
            "type": "string",
            "example": "Asia/Tehran"
          },
          "version": {
            "type": "string",
            "example": "1.0.10"
          }
        }
      },
      "ApiErrorResponse": {
        "type": "object",
        "required": ["status", "success", "author", "message", "error_code", "time_zone", "version"],
        "properties": {
          "status": {
            "type": "integer",
            "example": 400
          },
          "success": {
            "type": "boolean",
            "example": false
          },
          "author": {
            "type": "string",
            "example": "Kara_Company"
          },
          "message": {
            "type": "string",
            "example": "عملیات با مشکل مواجه شده است."
          },
          "error_code": {
            "type": "string",
            "example": "E1021"
          },
          "errors": {
            "type": "object",
            "nullable": true
          },
          "time_zone": {
            "type": "string",
            "example": "Asia/Tehran"
          },
          "version": {
            "type": "string",
            "example": "1.0.10"
          }
        }
      },
      "UserData": {
        "type": "object",
        "description": "Full user data structure",
        "properties": {
          "user_name": {
            "type": "string",
            "nullable": true,
            "example": "erfan_abouei"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "erfan_abouei@example.com"
          },
          "phone_number": {
            "type": "string",
            "pattern": "^09\\\\d{9}$",
            "example": "09123456789"
          },
          "gender": {
            "type": "string",
            "enum": ["MALE", "FEMALE"],
            "nullable": true,
            "example": "MALE"
          },
          "birth_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "example": "1387/5/28"
          },
          "profile_picture": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "example": "https://example.com/profile.jpg"
          },
          "bank_card_number": {
            "type": "string",
            "nullable": true,
            "example": "6037991234567890"
          },
          "sheba_number": {
            "type": "string",
            "nullable": true,
            "example": "IR012345678901234567890123"
          },
          "is_subscribed_for_newsletter": {
            "type": "boolean",
            "example": true
          },
          "is_phone_verified": {
            "type": "boolean",
            "example": true
          },
          "is_email_verified": {
            "type": "boolean",
            "example": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T00:00:00.000Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-12-26T12:30:00.000Z"
          }
        },
        "required": ["email", "phone_number", "role", "is_subscribed_for_newsletter"]
      },
      "UserPublicData": {
        "allOf": [
          {
            "$ref": "#/components/schemas/UserData"
          }
        ],
        "description": "User data returned to client (password and role excluded)"
      },
      "RegisterUserRequest": {
        "type": "object",
        "required": ["password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Required if phone_number not provided"
          },
          "phone_number": {
            "type": "string",
            "pattern": "^09\\\\d{9}$",
            "description": "Required if email not provided"
          },
          "password": {
            "type": "string",
            "minLength": 6
          }
        },
        "oneOf": [{ "required": ["email"] }, { "required": ["phone_number"] }],
        "not": {
          "required": ["email", "phone_number"]
        },
        "additionalProperties": false
      },

      "RegisterUserResponse": {
        "allOf": [{ "$ref": "#/components/schemas/ApiSuccessResponse" }],
        "properties": {
          "data": {
            "type": "object",
            "required": ["register_session_id"],
            "properties": {
              "register_session_id": { "type": "string", "format": "uuid" },
              "otp": { "type": "integer", "description": "Only visible in development" }
            }
          }
        }
      },
      "ResendOtpRequest": {
        "type": "object",
        "required": ["register_session_id"],
        "properties": {
          "register_session_id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },

      "ResendOtpResponse": {
        "allOf": [{ "$ref": "#/components/schemas/ApiSuccessResponse" }],
        "properties": {
          "data": {
            "type": "object",
            "required": ["expire_otp_timer"],
            "properties": {
              "expire_otp_timer": { "type": "integer", "example": 180 },
              "otp": { "type": "integer", "description": "Only visible in development" }
            }
          }
        }
      },
      "RegisterUserConfirmRequest": {
        "type": "object",
        "required": ["otp", "register_session_id"],
        "properties": {
          "otp": {
            "type": "integer",
            "minLength": 5,
            "maxLength": 5,
            "example": 46546
          },
          "register_session_id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "LoginUserRequest": {
        "type": "object",
        "required": ["password"],
        "oneOf": [
          {
            "required": ["email"]
          },
          {
            "required": ["phone_number"]
          }
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "phone_number": {
            "type": "string",
            "pattern": "^09\\\\d{9}$",
            "example": "09123456789"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "example": "MyStrongPass123"
          }
        }
      },
      "UserProfileSuccessResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiSuccessResponse"
          }
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/UserPublicData"
          }
        }
      },
      "UserLoginSuccessResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiSuccessResponse"
          }
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/UserPublicData"
          }
        }
      },
      "RegisterUserSuccessResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiSuccessResponse"
          }
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/UserPublicData"
          }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Invalid request (validation error)",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiErrorResponse"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "User is not authenticated",
