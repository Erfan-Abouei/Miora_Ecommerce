{
  "name": "miora_ecommerce_backend",
  "version": "1.0.0",
  "description": "Miora is an e-commerce backend built with Express, TypeScript, and Sequelize. It provides APIs for managing users, products, and orders with clean architecture and scalable modular design.",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsup src/index.ts --out-dir dist --format esm --dts --clean && npm run copy-assets && npm run create-loader",
    "start": "cross-env NODE_ENV=production node loader.js",
    "copy-assets": "cpx \"src/config/swagger/**/*.json\" dist/config/swagger && cpx \"docker-compose.yml\" dist/ && cpx \"Dockerfile\" dist/ && cpx \"package.json\" dist/ && cpx \"package-lock.json\" dist/ && cpx \".env*\" dist/ && cpx \".sequelizerc\" dist/",
    "create-loader": "echo import('./index.js'); > dist/loader.js",
    "lint": "eslint src/**/*.{ts,js} --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "bcryptjs": "3.0.3",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "^17.2.3",
    "express": "5.1.0",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.1",
    "mysql2": "^3.15.3",
    "node-cache": "5.1.2",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "5.27.11",
    "winston": "3.18.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/jsonwebtoken": "9.0.10",
    "@types/module-alias": "2.0.4",
    "@types/morgan": "1.9.10",
    "@types/node": "^24.10.0",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cpx": "^1.5.0",
    "cross-env": "^10.1.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "prettier": "3.6.2",
    "sequelize-cli": "^6.6.3",
    "tsc-alias": "1.8.16",
    "tsup": "^8.5.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Erfan-Abouei/Miora-Ecommerce.git"
  },
  "keywords": [
    "express",
    "typescript",
    "sequelize",
    "ecommerce",
    "api",
    "clean-architecture",
    "nodejs"
  ],
  "author": "Kara Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Erfan-Abouei/Miora-Ecommerce/issues"
  },
  "homepage": "https://github.com/Erfan-Abouei/Miora-Ecommerce#readme"
}
